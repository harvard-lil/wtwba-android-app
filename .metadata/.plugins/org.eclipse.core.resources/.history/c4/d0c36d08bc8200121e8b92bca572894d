    	         //startActivityForResult(rid_intent, 0);
    	         
    	         
    	         
    	         
    	         
    	      } else if (resultCode == RESULT_CANCELED) {
    	         // Handle cancel	
    	    	  message = "canceled";
    	      }
    	   } else{
    		   
    		   message = "requestcode not 0";
    	   }
    	   
    	   
    	   TextView t_view = (TextView) findViewById(R.id.upd_message);
